<%- include ('header') -%>
        <div class="col-10">
          <form method= "POST" >
            <div class="form-group">
              <label for="nameInput">Name</label>
              <input class="form-control" id="nameInput" name="name">
            </div>
            <div class="form-group">
              <label for="speciesInput">Species</label>
              <input class="form-control" id="speciesInput" name="species">
            </div>
            <div class="form-group">
              <label for="genderInput">Gender</label>
              <input class="form-control" id="genderInput" name="gender">
            </div>
            <div class="form-group">
              <label for="saberInput">Lightsaber</label>
              <select id="saberinput" class="form-control" id="saber" name="saber">
                <option selected>Choose...</option>
                <% allsaber.forEach(function(saber){ %>
                      <option><%=saber.color %>, <%=saber.handler %></option>
                <% }); %>
              </select>
            </div>
            <div class="form-group form-check">
              <input type="checkbox" class="form-check-input" id="Check">
              <label class="form-check-label" for="Check">I'm not a sith XD</label>
            </div>
            <input type="submit" class="btn btn-primary" value="Add">
            <a type="cancel" class="btn btn-danger" href="/">Cancel</a>
          </form>
        </div>
<%- include ('footer') -%>
